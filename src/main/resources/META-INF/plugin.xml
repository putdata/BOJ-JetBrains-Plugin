<idea-plugin>
    <id>com.boj.intellij</id>
    <name>BOJ IntelliJ</name>
    <vendor email="dev@example.com">BOJ IntelliJ Team</vendor>
    <description><![CDATA[
        Scaffold for a BOJ IntelliJ plugin.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.boj.intellij.settings.BojSettings"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.boj.intellij.settings.BojSettingsConfigurable"
                id="com.boj.intellij.settings.BojSettingsConfigurable"
                displayName="BOJ"/>
        <toolWindow
                id="BOJ"
                anchor="right"
                factoryClass="com.boj.intellij.ui.BojToolWindowFactory"
                canCloseContents="false"/>
        <toolWindow
                id="BOJ 테스트"
                anchor="bottom"
                factoryClass="com.boj.intellij.ui.testresult.BojTestResultToolWindowFactory"
                canCloseContents="false"
                icon="AllIcons.Toolwindows.ToolWindowRun"/>
    </extensions>
</idea-plugin>
